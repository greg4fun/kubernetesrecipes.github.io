---
/**
 * SEO Redirect Page: blue-green-deployments â†’ blue-green-deployment
 * This prevents 404 errors for old URLs and passes link equity to canonical page
 */
const canonicalUrl = "https://kubernetes.recipes/recipes/deployments/blue-green-deployment/";
const localPath = "/recipes/deployments/blue-green-deployment/";
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Redirecting to Blue-Green Deployment...</title>
  <meta name="robots" content="noindex, follow" />
  <link rel="canonical" href={canonicalUrl} />
  <meta http-equiv="refresh" content="0; url={localPath}" />
  <script is:inline define:vars={{ localPath }}>
    window.location.replace(localPath);
  </script>
</head>
<body>
  <p>Redirecting to <a href={localPath}>Blue-Green Deployment</a>...</p>
</body>
</html>
