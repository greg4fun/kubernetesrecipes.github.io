---
import { Picture } from "astro:assets";
import heroImage from "assets/hero-book.jpg";
import Link from "@components/ui/link.astro";
import { Icon } from "astro-icon/components";
---

<main class="grid lg:grid-cols-2 place-items-center pt-16 pb-8 md:pt-12 md:pb-24">
  <!-- Text Container: Appears first on mobile, second on larger screens -->
  <div class="order-1 md:order-2">
    <h1 class="text-5xl lg:text-6xl xl:text-7xl font-bold lg:tracking-tight xl:tracking-tighter">
      Kubernetes Recipes
    </h1>
    <p class="text-lg mt-4 text-slate-600 max-w-xl">
      A Practical Guide for Container Orchestration and Deployment.
    </p>
    <div class="mt-6 flex flex-col sm:flex-row gap-3">
      <Link
        href="https://amzn.to/3DzC8QA"
        target="_blank"
        class="flex gap-1 items-center justify-center"
        rel="noopener">
        <Icon class="text-white w-5 h-5" name="bx:bxs-book" />
         Pre-Order Now on Amazon
      </Link>
      <Link
        size="lg"
        style="outline"
        rel="noopener"
        href="https://link.springer.com/book/9798868813245"
        class="flex gap-1 items-center justify-center"
        target="_blank">
        <Icon class="text-black w-4 h-4" name="bx:bx-book-reader" />
         Springer Nature
      </Link>
    </div>
  </div>
  <!-- Image Container: Appears second on mobile, first on larger screens -->
  <div class="py-6 order-2 md:order-1 block">
    <Picture
      src={heroImage}
      alt="Kubernetes Recipes book cover"
      widths={[200, 400, 600]}
      sizes="(max-width: 800px) 100vw, 620px"
      loading="eager"
      format="avif"
      class="rounded-sm"
    />
  </div>
</main>


